---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};

// Calculate reading time (assuming 200 words per minute)
const calculateReadingTime = (content: string) => {
  const words = content.trim().split(/\s+/).length;
  const minutes = Math.ceil(words / 200);
  return `${minutes} min read`;
};
---

<Layout title={post.data.title} description={post.data.excerpt}>
  <Navigation />

  <!-- Hero Section with Featured Image -->
  <section class="relative h-[60vh] min-h-[500px] overflow-hidden">
    <!-- Background Image -->
    {post.data.featuredImage && (
      <div class="absolute inset-0">
        <img 
          src={post.data.featuredImage} 
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
        <!-- Overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/70"></div>
      </div>
    )}

    <!-- Hero Content -->
    <div class="relative h-full container mx-auto max-w-4xl px-4 flex flex-col justify-center text-white">
      <!-- Back Button -->
      <a 
        href="/blog"
        class="inline-flex items-center gap-2 text-white/90 hover:text-white mb-6 transition-colors w-fit"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Journey
      </a>

      <!-- Meta Info -->
      <div class="flex flex-wrap items-center gap-3 text-sm mb-4">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Vietnam
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {formatDate(post.data.date)}
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 leading-tight">
        {post.data.title}
      </h1>

      <!-- Subtitle/Excerpt -->
      <p class="text-lg md:text-xl text-white/90 max-w-3xl">
        {post.data.excerpt}
      </p>
    </div>
  </section>

  <!-- Tags and Share Section -->
  <section class="border-b border-gray-200 bg-white sticky top-0 z-40 shadow-sm">
    <div class="container mx-auto max-w-4xl px-4 py-4">
      <div class="flex flex-wrap items-center justify-between gap-4">
