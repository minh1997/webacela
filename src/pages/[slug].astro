---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

export async function getStaticPaths() {
  const landingPages = await getCollection('landing');
  
  return landingPages.map((page) => ({
    params: { slug: page.slug },
    props: { page },
  }));
}

const { page } = Astro.props;
const { Content } = await page.render();
const { data } = page;
---

<Layout title={data.title} description={data.description || data.title}>
  <Navigation />
  
  <main>
    <div class="bg-white rounded-lg shadow-lg">
      {/* Visual editor content (GrapesJS) - Show if bodyVisual exists */}
      {data.bodyVisual ? (
        <div class="mx-auto">
          <div class="visual-content" set:html={data.bodyVisual} />
        </div>
      ) : (
        /* Markdown content - Default fallback */
        <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-blue-600 hover:prose-a:text-blue-800 prose-strong:text-gray-900 prose-ul:text-gray-700 prose-li:text-gray-700">
          <Content />
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>