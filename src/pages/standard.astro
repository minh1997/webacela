<!-- Custom Styles for Carousel -->
<style>
	.b-hero__slider {
		--gap: 2rem;
		display: flex;
		gap: var(--gap);
		overflow: hidden;
		position: relative;
		user-select: none;
		max-width: 600px;
		margin: 0 auto;
	}
	
	.b-hero__slider:hover .b-hero__slider-wrapper {
		animation-play-state: paused;
	}
	
	.b-hero__slider-wrapper {
		animation: scroll 20s linear infinite;
		display: flex;
		flex-shrink: 0;
		gap: var(--gap);
	}
	
	.b-hero__slide {
		height: 24rem;
		width: 11rem;
		flex-shrink: 0;
	}
	
	@media (min-width: 768px) {
		.b-hero__slide {
			height: 28rem;
			width: 13rem;
		}
		.b-timeline__line {
			left: calc(50% - .4rem);
		}
		.b-timeline__bead {
			left: 50% !important;
			max-height: 3.4rem !important;
			max-width: 3.4rem !important;
			top: 50% !important;
		}
	}
	
	.b-hero__slide img {
		border-radius: 1rem;
		height: 100%;
		width: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
		box-shadow: 0 10px 25px rgba(0,0,0,0.1);
	}
	
	.b-hero__slide:hover img {
		transform: scale(1.05);
	}
	
	.b-hero__shadow {
		background: linear-gradient(180deg, rgba(240, 247, 254, 0), #F0F7FE);
		bottom: 0;
