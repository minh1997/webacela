	}
	
	.b-hero__slider-wrapper {
		animation: scroll 20s linear infinite;
		display: flex;
		flex-shrink: 0;
		gap: var(--gap);
	}
	
	.b-hero__slide {
		height: 24rem;
		width: 11rem;
		flex-shrink: 0;
	}
	
	@media (min-width: 768px) {
		.b-hero__slide {
			height: 28rem;
			width: 13rem;
		}
	}
	
	.b-hero__slide img {
		border-radius: 1rem;
		height: 100%;
		width: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
		box-shadow: 0 10px 25px rgba(0,0,0,0.1);
	}
	
	.b-hero__slide:hover img {
		transform: scale(1.05);
	}
	
	.b-hero__shadow {
		background: linear-gradient(180deg, rgba(240, 247, 254, 0), #F0F7FE);
		bottom: 0;
		height: 8rem;
		position: absolute;
		width: 100%;
		z-index: 9;
		pointer-events: none;
	}
	
	@keyframes scroll {
		0% {
			transform: translateZ(0);
			visibility: visible;
		}
		100% {
			transform: translate3d(calc(-100% - var(--gap)), 0, 0);
		}
	}
	
	.c-image {
		width: 100%;
		height: 100%;
		display: block;
	}
</style>