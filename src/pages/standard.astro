	.b-hero__slider-wrapper {
		animation: scroll 20s linear infinite;
		display: flex;
		flex-shrink: 0;
		gap: var(--gap);
	}
	
	.b-hero__slide {
		height: 24rem;
		width: 11rem;
		flex-shrink: 0;
