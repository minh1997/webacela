	function scrollToQuoteForm(budgetValue) {
		// Scroll to the quote form section
		const quoteForm = document.getElementById('quote-form');
		if (quoteForm) {
			quoteForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
			
			// Wait for scroll to complete, then set the budget value
			setTimeout(() => {
				const budgetSelect = document.getElementById('budget');
				if (budgetSelect) {
					budgetSelect.value = budgetValue;
					// Add a visual highlight to show it was selected
					budgetSelect.classList.add('ring-2', 'ring-indigo-500');
					setTimeout(() => {
						budgetSelect.classList.remove('ring-2', 'ring-indigo-500');
					}, 1500);
				}
			}, 800);
		}
	}
</script>