---
// This page redirects to the admin interface in development mode only
const isDevelopment = import.meta.env.DEV;

// If not in development, return 404 or redirect to home
if (!isDevelopment) {
  return new Response(null, {
    status: 404,
    statusText: 'Not Found'
  });
}
---

{isDevelopment && (
  <>
    <script>
      // Redirect to the actual admin folder
      if (typeof window !== 'undefined') {
        window.location.href = '/admin/index.html';
      }
    </script>

    <html>
    <head>
      <meta http-equiv="refresh" content="0; url=/admin/index.html">
      <title>Redirecting to Admin...</title>
    </head>
    <body>
      <p>Redirecting to admin panel...</p>
      <p>If you are not redirected, <a href="/admin/index.html">click here</a>.</p>
    </body>
    </html>
  </>
)}
