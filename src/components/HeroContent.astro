---
// Hero Content component
---

<main class="container mx-auto px-4 py-16">
  <!-- Hero Section -->
  <section class="text-center mb-20">
    <h1 class="text-6xl md:text-7xl font-bold text-gray-800 mb-8 leading-tight">
      Code with Joy.<span class="text-purple-600"> Innovate with Fun!</span>
    </h1>
    
    <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
      With a commitment to quality and collaboration, we transform ideas into powerful, scalable 
      solutions designed to propel your business forward.
    </p>
  </section>
  
  <!-- Technology Icons Grid -->
  <section class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 max-w-6xl mx-auto">
    <!-- Figma -->
    <div class="bg-gray-800 p-6 rounded-2xl hover:bg-gray-700 transition-colors duration-300 group">
      <div class="w-12 h-12 mx-auto">
        <svg viewBox="0 0 24 24" class="w-full h-full">
          <path fill="#F24E1E" d="M8 24c2.208 0 4-1.792 4-4v-4H8c-2.208 0-4 1.792-4 4s1.792 4 4 4z"/>
          <path fill="#FF7262" d="M4 12c0-2.208 1.792-4 4-4h4v8H8c-2.208 0-4-1.792-4-4z"/>
          <path fill="#1ABCFE" d="M4 4c0-2.208 1.792-4 4-4h4v8H8C5.792 8 4 6.208 4 4z"/>
          <path fill="#0ACF83" d="M12 8h4c2.208 0 4-1.792 4-4s-1.792-4-4-4h-4v8z"/>
          <path fill="#A259FF" d="M20 12c0 2.208-1.792 4-4 4s-4-1.792-4-4 1.792-4 4-4 4 1.792 4 4z"/>
        </svg>
      </div>
    </div>
    
    <!-- Node.js -->
    <div class="bg-gray-800 p-6 rounded-2xl hover:bg-gray-700 transition-colors duration-300 group">
      <div class="w-12 h-12 mx-auto">
        <svg viewBox="0 0 24 24" class="w-full h-full">
          <path fill="#8CC84B" d="M12 0c-.205 0-.409.016-.612.043C5.926.347 2.016 4.13 2.016 9.72c0 2.57 1.001 4.886 2.628 6.583-.402-.002-.803-.035-1.204-.098C1.566 15.857.351 14.299.01 12.583-.317 10.943.344 9.268 1.688 8.04c1.344-1.229 3.188-1.518 4.898-1.045.694-1.024 1.579-1.896 2.628-2.566-.402-.002-.803-.035-1.204-.098C6.136 4.983 4.921 3.425 4.58 1.709 4.253.069 4.914-1.606 6.258-2.834S9.446-4.382 11.156-3.909c.694-1.024 1.579-1.896 2.628-2.566-.402-.002-.803-.035-1.204-.098C10.706-.921 9.491-2.479 9.15-4.195c-.327-1.64.334-3.315 1.678-4.543S13.016-9.286 14.726-8.813c.694-1.024 1.579-1.896 2.628-2.566-.402-.002-.803-.035-1.204-.098C14.276-12.825 13.061-14.383 12.72-16.099c-.327-1.64.334-3.315 1.678-4.543S16.586-21.19 18.296-20.717z"/>
        </svg>
      </div>
    </div>
    
    <!-- Database -->
    <div class="bg-gray-800 p-6 rounded-2xl hover:bg-gray-700 transition-colors duration-300 group">
      <div class="w-12 h-12 mx-auto">
        <svg viewBox="0 0 24 24" class="w-full h-full">
          <path fill="#2E86AB" d="M12 3C7.58 3 4 4.79 4 7s3.58 4 8 4 8-1.79 8-4-3.58-4-8-4zM4 9v3c0 2.21 3.58 4 8 4s8-1.79 8-4V9c0 2.21-3.58 4-8 4s-8-1.79-8-4zM4 17v3c0 2.21 3.58 4 8 4s8-1.79 8-4v-3c0 2.21-3.58 4-8 4s-8-1.79-8-4z"/>
        </svg>
      </div>
    </div>
    
    <!-- Center Logo -->
    <div class="bg-purple-600 p-6 rounded-2xl hover:bg-purple-700 transition-colors duration-300 group">
      <div class="w-12 h-12 mx-auto">
        <svg viewBox="0 0 24 24" class="w-full h-full text-white" fill="currentColor">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
        </svg>
      </div>
    </div>
    
    <!-- React -->
    <div class="bg-gray-800 p-6 rounded-2xl hover:bg-gray-700 transition-colors duration-300 group">
      <div class="w-12 h-12 mx-auto">
        <svg viewBox="0 0 24 24" class="w-full h-full">
          <path fill="#61DAFB" d="M12 10.2c-1 0-1.8.8-1.8 1.8s.8 1.8 1.8 1.8 1.8-.8 1.8-1.8-.8-1.8-1.8-1.8zM12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 17.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm4 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
