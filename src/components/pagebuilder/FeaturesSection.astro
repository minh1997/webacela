---
export interface Props {
  title?: string;
  items: Array<{
    image?: string;
    title: string;
    description: string;
    link?: string;
  }>;
  columns?: number;
  backgroundColor?: string;
}

const { 
  title, 
  items, 
  columns = 3,
  backgroundColor = 'transparent'
} = Astro.props;

const gridCols = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
};
---

<section class="features-section py-12" style={`background-color: ${backgroundColor}`}>
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">{title}</h2>
    )}
    
    <div class={`grid ${gridCols[columns]} gap-8`}>
      {items.map((item) => (
        <div class="feature-item bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          {item.image && (
            <img src={item.image} alt={item.title} class="w-full h-48 object-cover rounded-lg mb-4" />
          )}
          <h3 class="text-xl font-semibold mb-3 text-gray-800">{item.title}</h3>
          <p class="text-gray-600 mb-4">{item.description}</p>
          {item.link && (
            <a href={item.link} class="text-blue-600 hover:text-blue-800 font-medium">
              Learn More â†’
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
