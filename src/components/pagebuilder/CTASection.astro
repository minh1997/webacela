---
export interface Props {
  title?: string;
  subtitle?: string;
  buttonText?: string;
  buttonLink?: string;
  backgroundColor?: string;
  textColor?: string;
}

const { 
  title, 
  subtitle, 
  buttonText, 
  buttonLink,
  backgroundColor = '#f3f4f6',
  textColor = 'text-gray-800'
} = Astro.props;
---

<section class="cta-section py-16" style={`background-color: ${backgroundColor}`}>
  <div class="container mx-auto px-4 text-center">
    {title && (
      <h2 class={`text-3xl md:text-4xl font-bold mb-4 ${textColor}`}>{title}</h2>
    )}
    {subtitle && (
      <p class={`text-lg md:text-xl mb-8 ${textColor} opacity-80`}>{subtitle}</p>
    )}
    {buttonText && buttonLink && (
      <a href={buttonLink} class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition-colors">
        {buttonText}
      </a>
    )}
  </div>
</section>
